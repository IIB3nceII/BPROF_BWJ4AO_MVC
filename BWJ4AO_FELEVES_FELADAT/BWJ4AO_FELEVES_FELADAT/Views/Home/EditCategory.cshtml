@using Models
@model Category

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/AddCategory.css">
    <link rel="stylesheet" href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css">
    <title>Edit | Category</title>
</head>
<body>
    <header id="header">
        <div class="container">
            <nav id="nav">
                <div class="nav-brand">
                    <a href="index.html">
                        <img src="~/olympialogo.png" alt="">
                    </a>
                </div>

                <div class="menu-icons open">
                    <i class="icon ion-md-menu"></i>
                </div>

                <ul class="nav-list">
                    <div class="menu-icons close">
                        <i class="icon ion-md-close"></i>
                    </div>
                    <li class="nav-item">
                        <a href="~/Home/Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link current">Database</a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Home/History" class="nav-link">History</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <!-- ------------------------------------------------- -->
    <div class="contentContainer">
        <h1>Edit Category</h1>
        <div class="form-outer">
            <form action="/Home/EditCategory" method="post">
                <div class="page">
                    <div class="field">
                        <div class="label">Starting Weight</div>
                        <input type="number" name="StartingWeight" value="@Model.StartingWeight" />
                    </div>

                    <div class="field">
                        <div class="label">Maximum Weight</div>
                        <input type="number" name="MaximumWeight" value="@Model.MaximumWeight" />
                    </div>

                    <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                    <input type="hidden" name="Name" value="@Model.Name" />

                    <div class="field btns">
                        <button class="submit"><b>Edit</b></button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="~/AddCategory.js"></script>
</body>
</html>