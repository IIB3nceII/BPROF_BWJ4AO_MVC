@using Models
@model Competitor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/AddCompetitor.css">
    <link rel="stylesheet" href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css">
    <title>Edit | Competitor</title>
</head>
<body>
    <header id="header">
        <div class="container">
            <nav id="nav">
                <div class="nav-brand">
                    <a href="index.html">
                        <img src="~/olympialogo.png" alt="">
                    </a>
                </div>

                <div class="menu-icons open">
                    <i class="icon ion-md-menu"></i>
                </div>

                <ul class="nav-list">
                    <div class="menu-icons close">
                        <i class="icon ion-md-close"></i>
                    </div>
                    <li class="nav-item">
                        <a href="~/Home/Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link current">Database</a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Home/History" class="nav-link">History</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <!-- ------------------------------------------------------------------ -->
    <div class="contentContainer">
        <h1>Edit Competitor</h1>
        <div class="progress-bar">
            <div class="step">
                <p>Name</p>
                <div class="bullet">
                    <span>1</span>
                    <div class="check icon ion-md-checkmark"></div>
                </div>
            </div>
            <div class="step">
                <p>Basics</p>
                <div class="bullet">
                    <span>2</span>
                    <div class="check icon ion-md-checkmark"></div>
                </div>
            </div>
            <div class="step">
                <p>Details</p>
                <div class="bullet">
                    <span>3</span>
                    <div class="check icon ion-md-checkmark"></div>
                </div>
            </div>
            <div class="step">
                <p>Submit</p>
                <div class="bullet">
                    <span>4</span>
                    <div class="check icon ion-md-checkmark"></div>
                </div>
            </div>
        </div>
        <!-- ------------------------------------------------------------------- -->
        <div class="form-outer">
            <form action="/Home/EditCompetitor" method="post">
                <input type="hidden" name="CompetitorId" value="@Model.CompetitorId" />
                <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                <input type="hidden" name="Gender" value="@Model.Gender" />

                <div class="page slidepage">
                    <div class="field">
                        <div class="label">Number</div>
                        <input type="number" name="Number" value="@Model.Number" />
                    </div>
                    <div class="field">
                        <div class="label">Name</div>
                        <input type="text" name="Name" value="@Model.Name" />
                    </div>
                    <div class="field nextBtn">
                        <button type="button"><b> Next</b></button>
                    </div>
                </div>
                <div class="page">
                    <div class="field">
                        <div class="label">Nationality</div>
                        <input type="text" name="Nationality" value="@Model.Nationality" />
                    </div>
                    <div class="field btns">
                        <button type="button" class="prev-1 prev"><b>Previous</b></button>
                        <button type="button" class="next-1 next"><b>Next</b></button>
                    </div>
                </div>

                <div class="page">
                    <div class="field">
                        <div class="label">Height</div>
                        <input type="number" name="Height" value="@Model.Height" />
                    </div>
                    <div class="field">
                        <div class="label">Weight</div>
                        <input type="number" name="Weight" value="@Model.Weight" />
                    </div>
                    <div class="field btns">
                        <button type="button" class="prev-2 prev"><b>Previous</b></button>
                        <button type="button" class="next-2 next"><b>Next</b></button>
                    </div>
                </div>
                <div class="page">
                    <div class="field">
                        <div class="label">Achived Place</div>
                        <input type="number" name="AchivedPlace" value="@Model.AchivedPlace" />
                    </div>

                    <div class="field btns">
                        <button class="submit"><b>Edit</b></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="~/AddCompetitor.js"></script>
</body>
</html>
